@model string // Role (e.g., "guest", "member", "staff", "admin")

<!DOCTYPE html>
<html lang="en" class="@(ViewData["Theme"] == "dark" ? "dark" : "")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BloodDonation.Mvcs</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BloodDonation.Mvcs.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />
</head>
<body>
    @{
        // Default to "guest" if no role is provided
        var role = Model ?? "guest";
        var isAuthenticated = User.Identity.IsAuthenticated;

        // Define navigation items
        var navItems = new Dictionary<string, List<(string href, string label, string iconClass)>>
        {
            ["guest"] = new List<(string, string, string)> {
        ("/", "Home", ""),
        ("/blood-drives", "Blood Drives", ""),
        ("/blog", "Blog", ""),
        ("/register", "Become a Donor", "fas fa-user-plus")
        },
            ["member"] = new List<(string, string, string)> {
        ("/", "Home", ""),
        ("/blood-drives", "Blood Drives", ""),
        ("/blog", "Blog", ""),
        ("/register", "Donor Profile", "fas fa-user-circle"),
        ("/search", "Find Blood", "fas fa-heartbeat"),
        ("/emergency", "Emergency Requests", "fas fa-siren")
        },
            ["staff"] = new List<(string, string, string)> {
        ("/", "Home", ""),
        ("/blood-drives", "Blood Drives", ""),
        ("/blog", "Blog", ""),
        ("/search", "Find Blood", "fas fa-heartbeat"),
        ("/emergency", "Emergency System", "fas fa-siren"),
        ("/reminder", "Donation Reminder", "fas fa-envelope")
        },
            ["admin"] = new List<(string, string, string)> {
        ("/", "Home", ""),
        ("/blood-drives", "Blood Drives", ""),
        ("/blog", "Blog", ""),
        ("/admin/dashboard", "Admin Dashboard", "fas fa-clipboard-list"),
        ("/admin/users", "Manage Users", "fas fa-user-cog"),
        ("/admin/blood-units", "Manage Blood Units", "fas fa-building"),
        ("/reminder", "Donation Reminder Tool", "fas fa-envelope")
        }
        };

        // Select navigation items based on role
        var currentNavItems = navItems.ContainsKey(role) ? navItems[role] : navItems["guest"];
    }

    <header class="bg-card shadow-md sticky top-0 z-50">
        <div class="container mx-auto px-4 py-3 flex items-center justify-between">
            <!-- Logo -->
            <a href="/" class="flex items-center gap-2 text-primary hover:text-primary/80 transition-colors text-decoration-none">
                <i class="fas fa-tint text-2xl text-red-700"></i>
                <span class="text-2xl font-bold text-red-700">BloodConnect</span>
            </a>

            <!-- Desktop Navigation -->
            <nav class="hidden md:flex items-center space-x-1 lg:space-x-2 text-decoration-none">
                @foreach (var item in currentNavItems)
                {
                    var isActive = Context.Request.Path == item.href;
                    var isBecomeDonor = item.href == "/register" && item.label == "Become a Donor";
                    <a href="@item.href"
                       class="text-decoration-none @(isBecomeDonor ? "md:hidden lg:flex text-white bg-red-700 hover:bg-red-400" : isActive ? "text-white bg-red-500 hover:bg-red-400" : "hover:text-white! hover:bg-red-500") inline-flex items-center px-4 py-2 text-sm font-medium rounded-md transition-colors">
                        @if (!string.IsNullOrEmpty(item.iconClass))
                        {
                            <i class="@item.iconClass mr-1.5 text-sm"></i>
                        }
                        @item.label
                    </a>
                }
                @if (isAuthenticated)
                {
                    <a href="/profile"
                       class="text-foreground/80 hover:text-primary/90 hover:bg-accent/10 inline-flex items-center px-4 py-2 text-sm font-medium rounded-md transition-colors">
                        <i class="fas fa-user-circle mr-1.5 text-sm"></i> Profile
                    </a>
                    <form asp-action="Logout" asp-controller="Account" method="post" class="inline">
                        <button type="submit"
                                class="text-foreground/80 hover:text-primary/90 hover:bg-accent/10 inline-flex items-center px-4 py-2 text-sm font-medium border border-border rounded-md transition-colors">
                            <i class="fas fa-sign-out-alt mr-1.5 text-sm"></i> Logout
                        </button>
                    </form>
                }
                else
                {
                    <a href="/login"
                       class="text-decoration-none text-red-700! hover:bg-red-300 border-1 inline-flex items-center px-4 py-2 text-sm font-medium rounded-md transition-colors">
                        <i class="fas fa-sign-in-alt mr-1.5 text-sm"></i> Login
                    </a>
                }
            </nav>

            <!-- Mobile Navigation -->
            <div class="md:hidden flex items-center text-decoration-none">
                @if (isAuthenticated)
                {
                    <a href="/profile" class="mr-2">
                        <i class="fas fa-user-circle text-xl"></i>
                    </a>
                }
                <!-- Checkbox for mobile menu toggle -->
                <input type="checkbox" id="mobile-menu-toggle" class="hidden peer">
                <label for="mobile-menu-toggle" class="cursor-pointer">
                    <i class="fas fa-bars text-2xl"></i>
                    <span class="sr-only">Open menu</span>
                </label>
                <div class="fixed inset-0 bg-black bg-opacity-50 hidden peer-checked:flex md:hidden z-50"
                     onclick="document.getElementById('mobile-menu-toggle').checked = false;">
                    <div class="w-[280px] bg-white ml-auto h-full p-0 flex flex-col shadow-lg">
                        <!-- Mobile Menu Header -->
                        <div class="p-4 flex justify-between items-center border-b">
                            <a href="/" class="flex items-center gap-2 text-decoration-none text-red-700!"
                               onclick="document.getElementById('mobile-menu-toggle').checked = false;">
                                <i class="fas fa-tint text-xl"></i>
                                <span class="text-xl font-bold">BloodConnect</span>
                            </a>
                            <label for="mobile-menu-toggle" class="cursor-pointer">
                                <i class="fas fa-times text-2xl"></i>
                                <span class="sr-only">Close menu</span>
                            </label>
                        </div>
                        <!-- Mobile Menu Links -->
                        <nav class="flex-grow p-4 space-y-1">
                            @foreach (var item in currentNavItems)
                            {
                                var isActive = Context.Request.Path == item.href;
                                var isBecomeDonor = item.href == "/register" && item.label == "Become a Donor";
                                <a href="@item.href"
                                   class="text-decoration-none @(isBecomeDonor ? "text-white bg-red-700 hover:bg-red-300" : isActive ? "bg-red-500 text-white" : "text-foreground/80 hover:bg-accent/10 hover:text-primary") block px-3 py-2.5 rounded-md text-base font-medium flex items-center"
                                   onclick="document.getElementById('mobile-menu-toggle').checked = false;">
                                    @if (!string.IsNullOrEmpty(item.iconClass))
                                    {
                                        <i class="@item.iconClass mr-2 text-sm"></i>
                                    }
                                    @item.label
                                </a>
                            }
                        </nav>
                        <!-- Mobile Menu Footer -->
                        <div class="p-4 border-t mt-auto">
                            @if (isAuthenticated)
                            {
                                <form asp-action="Logout" asp-controller="Account" method="post">
                                    <button type="submit"
                                            class="w-full text-foreground/80 hover:text-primary/90 hover:bg-accent/10 inline-flex items-center px-4 py-2 text-base font-medium border border-border rounded-md transition-colors"
                                            onclick="document.getElementById('mobile-menu-toggle').checked = false;">
                                        <i class="fas fa-sign-out-alt mr-2 text-sm"></i> Logout
                                    </button>
                                </form>
                            }
                            else
                            {
                                <div class="space-y-2">
                                    <a href="/login"
                                       class="w-full text-red-700! hover:bg-red-300 inline-flex items-center px-4 py-2 text-base font-medium border border-border rounded-md transition-colors"
                                       onclick="document.getElementById('mobile-menu-toggle').checked = false;">
                                        <i class="fas fa-sign-in-alt mr-2 text-sm"></i> Login
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BloodDonation.Mvcs - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
            document.documentElement.classList.add('dark');
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    /* Ensure the mobile menu is hidden by default and shown when the checkbox is checked */
    #mobile-menu-toggle:checked ~ .peer-checked\:flex {
        display: flex;
    }
</style>
